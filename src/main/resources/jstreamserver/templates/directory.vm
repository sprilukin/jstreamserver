<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <link href="/static/css/jstreamserver.css" rel="stylesheet" type="text/css" media="screen"/>

    <script>
        curl = {
            baseUrl: '/static',
            paths: {
                jstreamserver: 'script/jstreamserver'
                //"jquery": "script/jquery-1.7.1",
                //"tmpl": "script/jquery.tmpl"
            }
        };
    </script>
    <script src="/static/script/curl.js" type="text/javascript"></script>
    <script src="/static/script/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="/static/script/jquery.tmpl.js" type="text/javascript"></script>
    <script type="text/javascript">
        curl(["jstreamserver", "domReady!"]).then(
                function (jstreamserver) {
                    jstreamserver.init($folder);
                },
                function (ex) {
                    alert(ex);
                }
        )
    </script>

    #* HTML templates *#
    <script id="dirListTmpl" type="text/x-jquery-tmpl">
        <li id="${id}">
            {{if directory == true}}
            <div class="directory">
            {{else}}
            <div class="file">
            {{/if}}

                <span class="icon"></span>
                {{if liveStreamSupported == true}}
                <a href="/livestream?file=${url}" title="${name}">${name}</a>
                <span class="ajax-loader hidden"></span>
                {{else}}
                <a href="/?path=${url}" title="${name}">${name}</a>
                {{/if}}
            </div>
        </li>
    </script>
    <script id="breadcumbTmpl" type="text/x-jquery-tmpl">
        <span class="breadcrumb-item">
            <a href="/?path=${url}"><span class="slash">/</span>${name}</a>
        </span>
    </script>
    <script id="livestreamTmpl" type="text/x-jquery-tmpl">
        <video class="${cssClass}" src="${url}" controls="controls" autoplay="autoplay"></video>
    </script>
</head>
<body>

#* Main content *#

<div class="container">
    <div id="breadcrumb" class="breadcrumb"></div>
    <ul id="directoryList" class="folderContent">
    </ul>
</div>
</body>
</html>
